load("@crates//:defs.bzl", "all_crate_deps")
load("//rust:defs.bzl", "rust_test_suite", "rustfmt_config")

rustfmt_config(
    name = "enable-rustfmt",
)

rust_test_suite(
    name = "integration",
    size = "small",
    srcs = glob(["**/*_tests.rs"]),
    data = [
        "//rust:selenium-manager",
    ],
    edition = "2024",
    rustc_env = {
        "CARGO_BIN_EXE_selenium-manager": "rust/selenium-manager",
    },
    shared_srcs = glob(
        ["**/*.rs"],
        exclude = ["**/*_tests.rs"],
    ),
    tags = [
        "no-sandbox",
        "requires-network",
    ],
    deps = [
        "//rust:selenium_manager",
        "@rules_rust//tools/runfiles",
    ] + all_crate_deps(
        package_name = "rust",
        normal = True,
        normal_dev = True,
    ),
)
